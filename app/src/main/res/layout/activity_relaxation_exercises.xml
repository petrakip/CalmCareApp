<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelaxationExercises">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/relaxationExercisesTitle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FF9E80"
        android:gravity="center"
        android:text="@string/relaxation_exercises_string"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goMainFromRelaxationExercises"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/go_back_icon"
        app:layout_constraintBottom_toBottomOf="@+id/relaxationExercisesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.533" />

    <Button
        android:id="@+id/animationExercise"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:background="@android:color/transparent"
        android:contentDescription="animation exercise button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relaxationExercisesTitle"
        app:layout_constraintVertical_bias="0.009" />

    <TextView
        android:id="@+id/animationExerciseText"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginEnd="4dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/animation_exercise_string"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/animationExercise"
        app:layout_constraintEnd_toEndOf="@+id/animationExercise"
        app:layout_constraintTop_toTopOf="@+id/animationExercise"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/animation_icon"
        app:layout_constraintBottom_toBottomOf="@+id/animationExercise"
        app:layout_constraintEnd_toStartOf="@+id/animationExerciseText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/animationExercise"
        app:layout_constraintTop_toTopOf="@+id/animationExercise" />

    <Button
        android:id="@+id/videoExercise"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:contentDescription="video exercise button"
        app:layout_constraintBottom_toTopOf="@+id/simpleExercise"
        app:layout_constraintEnd_toEndOf="@+id/animationExercise"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/animationExercise"
        app:layout_constraintTop_toBottomOf="@+id/animationExercise" />

    <TextView
        android:id="@+id/videoExerciseText"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginEnd="4dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/video_exercise_choice_string"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/videoExercise"
        app:layout_constraintEnd_toEndOf="@+id/videoExercise"
        app:layout_constraintTop_toTopOf="@+id/videoExercise"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/video_icon"
        app:layout_constraintBottom_toBottomOf="@+id/videoExercise"
        app:layout_constraintEnd_toStartOf="@+id/videoExerciseText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/videoExercise"
        app:layout_constraintTop_toTopOf="@+id/videoExercise" />

    <Button
        android:id="@+id/simpleExercise"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_marginBottom="80dp"
        android:background="@android:color/transparent"
        android:contentDescription="simple exercise button"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/micRelaxationExercises"
        app:layout_constraintEnd_toEndOf="@+id/videoExercise"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/videoExercise" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/simple_exercise_choice_string"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/simpleExercise"
        app:layout_constraintEnd_toEndOf="@+id/simpleExercise"
        app:layout_constraintTop_toTopOf="@+id/simpleExercise" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/self_improvement_icon"
        app:layout_constraintBottom_toBottomOf="@+id/simpleExercise"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/simpleExercise"
        app:layout_constraintTop_toTopOf="@+id/simpleExercise"
        app:layout_constraintVertical_bias="0.52" />

    <Button
        android:id="@+id/micRelaxationExercises"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/mic_icon"
        android:contentDescription="microphone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>