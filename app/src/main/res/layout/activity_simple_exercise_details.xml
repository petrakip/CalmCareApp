<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle1">

    <TextView
        android:id="@+id/detailsTitleContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FF9E80"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/goSimpleExerciseList"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/go_back_icon"
        app:layout_constraintBottom_toBottomOf="@+id/detailsTitleContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/detailsTitleContainer" />

    <TextView
        android:id="@+id/detailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/exercise_title_string"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/detailsTitleContainer"
        app:layout_constraintEnd_toEndOf="@+id/detailsTitleContainer"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toEndOf="@+id/goSimpleExerciseList"
        app:layout_constraintTop_toTopOf="@+id/detailsTitleContainer"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/detailsImage"
        android:layout_width="270dp"
        android:layout_height="260dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/detailsTitleContainer"
        app:layout_constraintStart_toStartOf="@+id/detailsTitleContainer"
        app:layout_constraintTop_toBottomOf="@id/detailsTitleContainer" />

    <ScrollView
        android:id="@+id/descScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/detailsImage"
        app:layout_constraintBottom_toTopOf="@id/simpleExerciseMic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/detailsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/exercise_description_string"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </ScrollView>

    <TextView
        android:id="@+id/simpleExerciseMic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/mic_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498" />


</androidx.constraintlayout.widget.ConstraintLayout>
