<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoPlayerActivity"
    tools:layout_editor_absoluteX="2dp"
    tools:layout_editor_absoluteY="0dp"
    android:background="@drawable/rectangle1">

    <TextView
        android:id="@+id/videoItemTitleContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FF9E80"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/videoItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/video_title_string"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/videoItemTitleContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.341"
        app:layout_constraintStart_toEndOf="@+id/goVideoExerciseList"
        app:layout_constraintTop_toTopOf="@+id/videoItemTitleContainer"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/goVideoExerciseList"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/go_back_icon"
        app:layout_constraintBottom_toBottomOf="@+id/videoItemTitleContainer"
        app:layout_constraintStart_toStartOf="@+id/videoItemTitleContainer"
        app:layout_constraintTop_toTopOf="@+id/videoItemTitleContainer"/>

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtubePlayerView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/videoItemTitleContainer" />

    <ScrollView
        android:id="@+id/descScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/youtubePlayerView"
        app:layout_constraintBottom_toTopOf="@id/videoExerciseMic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/descView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:paddingStart="8dp"
            android:text="@string/video_description_string"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </ScrollView>

    <TextView
        android:id="@+id/videoExerciseMic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/mic_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
